<%= form_for course do |f| %>
  <%=f.label :name %>:<br>
  <%=f.text_field :name %>
  <br>
  <%=f.label :address %>:<br>
  <%=f.text_field :address %>
  <br>
  <%=f.label :city %>:<br>
  <%=f.text_field :city %>
  <br>
  <%=f.label :state %>:<br>
  <%=f.text_field :state %>
  <br>
  <%=f.label :description %>:<br>
  <%=f.text_area :description %>
  <br>
  <%=f.label :price %>:<br>
  <%=f.number_field :price %>
  <br>
  <%=f.label :difficulty %>:<br>
  <%=f.select(:difficulty, options_for_select(['Expert', 'Intermediate', 'Beginner'], 'Expert')) %><br>
  <br>
  <%= f.submit submit_text %>

<% end %>


