<h1>Courses Home Page</h1>


<h2>Below Find all Courses</h2><br>

<% if current_user.admin %>
    <%= link_to "Add Course", new_course_path(@course) %>
  <% end %>

<div class="courses">
  <% @courses.each do |course| %>
    <h1 class="courses_name"> <%= course.name %> </h1>

    <strong><p class="description">Description:</strong><br>
    <%= course.description %></p>

    <strong><%= link_to 'Course Details', course_path(course)%></strong> ||
    <strong><%= link_to 'Visits Log', course_visits_path(course)%></strong><br><br>

    <% if current_user.admin %>
      <%= 'Admin:' %> <br>
      <%= link_to 'Add Holes', new_course_hole_path(course) %>
      <%= link_to 'Edit Course', edit_course_path(course) %>
    <% end %>
  <% end %>
</div>