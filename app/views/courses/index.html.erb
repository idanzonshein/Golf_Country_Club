<h1>Courses Home Page</h1>

<h2>Below Find all Courses</h2>

<% @courses.each do |course| %>
  <h1> <%= @course.name %> </h1>
  <p>Address: <%= @course.address %></p>
  <p><%= @course.city %></p>
  <p><%= @course.state %></p>
  <p><%= @course.description %></p>
  <p><%= @course.price %></p>
  <p><%= @course.par %></p>
  <p><%= @course.length %></p>
  <p><%= @course.difficulty %></p>
<% end %>